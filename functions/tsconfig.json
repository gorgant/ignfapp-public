{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  // Added this to satisfy the angular services warning in vscode, no other reason
  "angularCompilerOptions": {
    "strictTemplates": true,
  }
}
